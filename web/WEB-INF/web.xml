<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Servlet para registrar estudiantes -->
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>servlets.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

    <!-- Servlet para listar estudiantes -->
    <servlet>
        <servlet-name>listar</servlet-name>
        <servlet-class>servlets.ListarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listar</servlet-name>
        <url-pattern>/listar</url-pattern>
    </servlet-mapping>

    <!-- Servlet para eliminar estudiantes -->
    <servlet>
        <servlet-name>eliminar</servlet-name>
        <servlet-class>servlets.EliminarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>eliminar</servlet-name>
        <url-pattern>/eliminar</url-pattern>
    </servlet-mapping>

</web-app>
